        {
          "title": "Be specific",
          "value": "Name the file, thread, or meeting you mean."
        },
        {
          "title": "Set the tone",
          "value": "Specify \"executive\", \"friendly\", or \"direct\"."
        },
        {
          "title": "Ask for options",
          "value": "\"Give 2 versions - short and detailed.\""
        },
        {
          "title": "Verify",
          "value": "Finish with: \"What are the assumptions?\""
        }
      ]
