{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
    {
      "type": "TextBlock",
      "text": "\uD83D\uDCAC Copilot Chat tips (Beginner)",
      "size": "Large",
      "weight": "Bolder",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "Turn \"I'm stuck\" into momentum. Start with one small, clear ask - then iterate.",
      "isSubtle": true,
      "spacing": "Small",
      "wrap": true
    },
    {
      "type": "Container",
      "style": "emphasis",
      "spacing": "Medium",
      "items": [
        {
          "type": "TextBlock",
          "text": "ðŸŽ¯ A great prompt has 4 parts",
          "weight": "Bolder",
          "wrap": true,
          "spacing": "Small"
        },
        {
          "type": "FactSet",
          "facts": [
            {
              "title": "Goal",
              "value": "What are you trying to achieve?"
            },
            {
              "title": "Context",
              "value": "Paste the relevant snippet, error, or constraints."
            },
            {
              "title": "Output format",
              "value": "Bullets, steps, code, table - be explicit."
            },
            {
              "title": "Quality bar",
              "value": "Performance, security, accessibility, tone, etc."
            }
          ]
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "ðŸš€ Try these starter prompts",
      "weight": "Bolder",
      "spacing": "Medium",
      "wrap": true
    },
    {
      "type": "FactSet",
      "facts": [
        {
          "title": "Explain",
          "value": "\"Explain async/await in C# with a tiny example and common gotchas.\""
        },
        {
          "title": "Debug",
          "value": "\"Here's the error + stack trace. Suggest likely root causes and next checks.\""
        },
        {
          "title": "Draft",
          "value": "\"Write a polite update asking for approval. Keep it under 70 words.\""
        },
        {
          "title": "Summarize",
          "value": "\"Summarize this thread into: decision, owners, next steps.\""
        }
      ]
    },
    {
        "type": "TextBlock",
        "text": "âœ… Quick habits",
        "weight": "Bolder",
        "spacing": "Medium",
        "wrap": true
      },
      {
        "type": "FactSet",
        "facts": [
          {
            "title": "Compare",
            "value": "Ask for 2 options (fast vs. robust)."
          },
          {
            "title": "Context",
            "value": "Say what you've already tried."
          },
          {
            "title": "Iterate",
            "value": "\"Improve this - make it safer, simpler, and add tests.\""
          }
        ]
      }
